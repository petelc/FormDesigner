  const validate = (): boolean => {
    const newErrors: ValidationErrors = {};

{{~ for field in fields ~}}
{{~ if field.required ~}}
    // {{ field.label }} - Required
    if (!formData.{{ field.name_camel }}{{ if field.typescript_type == "string" }} || formData.{{ field.name_camel }}.trim() === ''{{ end }}) {
