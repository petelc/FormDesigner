{{~ for field in Fields ~}}
  {{ field.NameCamel }}: {{ field.TypeScriptType }}{{ if !field.Required }} | null{{ end }};
{{~ end ~}}
}

interface {{ EntityName }}FormProps {
  initialData?: Partial<{{ EntityName }}FormData>;
  onSubmit: (data: {{ EntityName }}FormData) => void | Promise<void>;
  onCancel?: () => void;
  isLoading?: boolean;
}

interface ValidationErrors {
  [key: string]: string;
}

// ============================================================================
// COMPONENT
