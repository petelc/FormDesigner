            disabled={isLoading}
            className="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
          />
          <label htmlFor="{{ field.name_camel }}" className="ml-2 text-sm text-gray-700">
            {{ field.label }}
          </label>
        </div>
{{~ else ~}}
        <input
          type="{{ field.type }}"
          id="{{ field.name_camel }}"
          name="{{ field.name_camel }}"
          value={formData.{{ field.name_camel }}}
          onChange={handleChange}
          onBlur={handleBlur}
          {{ if field.required }}required{{ end }}
          {{ if field.placeholder }}placeholder="{{ field.placeholder }}"{{ end }}
          {{ if field.max_length }}maxLength={{ field.max_length }}{{ end }}
          {{ if field.min_length }}minLength={{ field.min_length }}{{ end }}
          disabled={isLoading}
          className={`mt-1 block w-full rounded-md shadow-sm ${
            touched.has('{{ field.name_camel }}') && errors.{{ field.name_camel }}
              ? 'border-red-300 focus:border-red-500 focus:ring-red-500'
              : 'border-gray-300 focus:border-blue-500 focus:ring-blue-500'
          }`}
        />
{{~ end ~}}
        
        {touched.has('{{ field.name_camel }}') && errors.{{ field.name_camel }} && (
          <p className="mt-1 text-sm text-red-600">{errors.{{ field.name_camel }}}</p>
        )}
      </div>

{{~ end ~}}

      {/* Form Actions */}
